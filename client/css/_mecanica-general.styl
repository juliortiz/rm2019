.container-mecanica-general
	display flex
	justify-content center
	flex-wrap wrap
	&__item
		margin .7em
		border 3px solid _bluehover
		text-align center
		background-color _bluehover
		border-radius 5px
		position relative
		figure
			border-radius 5px 5px 0 0
			overflow hidden
		b
			text-transform uppercase
			color _white
		.contexto
			opacity 0
			position absolute
			width 100%
			height 100%
			top 0
			padding .5em
			box-sizing border-box
			background-color white
			b
				display block
				padding-top .3em
				margin-bottom .3em
				border-bottom 2px solid _bluehover

			a
				padding .6em 0 .2em
				background-color _bluehover
				text-transform uppercase
				font-style italic
				position absolute
				color _white
				width 100%
				bottom 0
				left 0
				font-size 1em
				font-weight bold
				line-height 1

		&:hover
			transition all .7s ease-in-out
			box-shadow 0px 1.5px 1px 0px rgba(0,0,0,0.5)
			.contexto
				opacity 0.93
				transition all .7s