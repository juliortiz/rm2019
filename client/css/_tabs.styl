.accordion__content
	.container-columns
		display flex
		flex-direction column
		&__item
			padding-bottom .8em
			margin-bottom .5em
		.subtitle-column
			text-align center
			text-transform uppercase
			margin 0 auto
			border-radius 5px 5px 0 0
			margin-bottom .5em
			padding-top .2em
			color _black
			&--green
				background-color #e0ffd9
			&--blue
				background-color #caf5ff
		.body-column
			padding 0 .3em
			.figure-columns
				display table
				margin 0 auto

.tabs-container
		display block
	.tab
		margin 0 auto
		padding 0
		display flex
		position relative
		top 1px
		overflow-x auto
		
		&::-webkit-scrollbar
			height: 15px

		&::-webkit-scrollbar-track
			background-color: _gray-bg

		&::-webkit-scrollbar-thumb
			border 1px solid _blue
			background-color _bluehover
			border-radius: 5px

		&__item
			border 1px solid _blue
			padding .5em .7em
			margin-right 1px
			border-radius 5px 5px 0 0
			line-height 1.3
			cursor pointer
			text-transform uppercase
			color _gray
			font-size 1.2em
			font-weight bold
			white-space nowrap
		.active
			font-style italic
			color _blue
			background-color _gray-bg
			border 2px solid _gray-nav
			border-bottom-color transparent

	.panels
		padding 1em
		border-top  1px solid _gray-nav
		border-right 2px solid _gray-nav
		border-bottom 2px solid _gray-nav
		border-left 2px solid _gray-nav
		border-radius 0 0 5px 5px
		background-color _gray-bg
		&__item
			display: none
			.d-flexbox
				display flex
				justify-content space-around
				.img-right
					margin-left 1.5em
					img
						border 1px solid _gray-border
						background-color _white
						border-radius .5em
						overflow hidden
			.d-flexbox--column
				flex-direction column
		.tabs__contents__img
			display flex
			justify-content space-around
			align-items center
			margin-top 3em
			flex-wrap wrap
			figure
				padding .5em
		
		.tabs__contents__item
			top 0
			left 0
			border-radius 5px
			background-color _gray-bg
			.d-flexbox
				display flex
				justify-content space-around
				.img-right
					margin-left 1.5em
					img
						border 1px solid _gray-border
						background-color _white
						border-radius .5em
						overflow hidden
			.d-flexbox--column
				flex-direction column
			&--equipos
				padding .5em
				.accordion__img
					display flex
					flex-wrap wrap
					justify-content space-around
					align-items center
					margin 1em 0
				.container-description
					&__item
						max-width 100%
						display flex
						margin-bottom 1em
					&__number
						width 22px
						height 22px
						border-radius 50%
						text-align center
						margin-right .5em
						p
							color white
							font-weight bold
							line-height 23px
					&__number--red
						background-color _red-brc
					&__number--blue
						background-color _blue-lovato
					&__number--green
						background-color _green-zavoli
					&__number--gray
						background-color _gray-landi
					&__text
						display inline-block
						width 100%
					&__subtitle
						font-weight bold
						&--red
							color _red-brc
						&--blue
							color _blue-lovato
						&--green
							color _green-zavoli
		.active
			display: block

@media screen and (min-width: 30em)
	.accordion__content
		.container-columns
			flex-direction: row