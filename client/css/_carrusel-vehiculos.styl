.carrusel
	display none
.carrusel-1
	display block
	margin 0 auto
	max-width 13em
	margin 0 auto
	background-color _gray-bg
	&__item
		margin 1em
		max-width 13em
		overflow hidden
		border-radius .8em

@media screen and (min-width 30em)
	.accordion__content
		.container-columns
			flex-direction row
			&__item
				width 50%
				&:nth-child(1)
					margin-right .3em
	.carrusel-1
		max-width 410px

@media screen and (min-width 37.5em)
	.carrusel-1
		max-width 540px

@media screen and (min-width 50em)
	.carrusel-1
		max-width 93%
	.carrusel
		display block
		max-width 93%
		margin 0 auto
		background-color _gray-bg
		.marcas
			overflow hidden
			margin-bottom 1em
			border 1px solid _gray-nav
			border-radius .8em
		.logos
			overflow hidden
			margin-bottom 1em
			border 1px solid _gray-nav
			border-radius .8em
		.repuestos-carrusel
			background-color _white
			overflow hidden
			margin-bottom 1em
			border 1px solid _gray-nav
			border-radius .8em
		&__item
			margin 1em
			max-width 13em
			overflow hidden
			border-radius .8em
			&--2
				border-radius 4px
				min-width 5em
			&--3
				margin 1em 0
				figure
					background-color _white
					padding 5px
					overflow hidden
					margin 0 .25em
					border-radius 6px
					border 1px solid _gray-border
			&--4
				margin 1em 0
				
				figure
					padding 5px
					overflow hidden
					margin 0 .25em
					border-radius 6px
			.nombre
				color: #195faa
				text-transform: uppercase
				text-align center
				padding 0 .5em
				box-sizing border-box
				font-family sans-serif
				font-size .75em
