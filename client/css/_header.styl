.header
	background-color _gray-nav
	position fixed
	z-index 600
	width 100%
	box-shadow 0px 2px 7px 0px rgba(0,0,0,0.5)

.header__nav--cel
	position fixed
	width 100%
	top 3.5em
	right 100%
	height calc(100% - 54px)
	background-color _white
	padding-top .5em
	overflow scroll
	z-index 150
	.nav
		display flex
		flex-direction column
		height 100%
		ul
			padding 0
			margin 0
			li
				& > ul
					display none
					& > li
						padding-left 3em
					& > li > ul
						display none

	a
		text-transform uppercase
		text-decoration none
		color _gray
		display block
		padding .5em
		transition .4s
		font-weight bold
		span
			font-size .8em
			color _gray
			margin-left 1em
		&:hover
			font-style italic
			color _gray

	.nav__data
		background-color _gray-nav
		width 100%
		margin-top auto
		.data
			font-size 1em
			display table
			margin-left auto
			margin-right auto
			color _white
			vertical-align: middle;
			font-family: 'Open Sans', sans-serif
			margin-bottom .5em
			.icon-ph,
			.icon-lc,
			.icon-sb
				color _while
				margin-right 1em
			&:nth-child(n+1)
				margin-top 1em
			&:nth-child(n+3)
				margin-bottom 1.5em


.header-content
	padding 0.5rem
	display flex
	justify-content space-between
	align-items center
	.header__left
		font-size 0
		a
			display block
		.header__logo
			max-width 75%

	.header__icon
		font-size 2rem
		cursor pointer
		color _white
		padding 0.15rem 0.2rem 0.1rem 0.2rem
		border-radius 0.2rem
		line-height 1.5rem

@media screen and (min-width 57.25em)
	.header__nav--cel
		display none

	.header-content
		padding .8em .5rem
		display flex
		justify-content space-between
		align-items center
		.header__left
			.header__logo
				max-width 100%
		.header__icon
			display none

	.nav ul
		list-style none
		padding 0
		& ul ul
			left 100%
			top 0
			width initial
	.nav li
		line-height 2rem
		position relative
		& li
			background _gray-nav
			width 100%
			box-sizing border-box
			max-height 0
			overflow hidden
			transition all .5s
			a
				font-weight 500
				span
					font-size: 13px
					margin-left 5px
					vertical-align middle
		& ul
			position absolute
			width 151%
		&:hover > ul > li
			max-height 500px
			overflow visible
	.nav a
		text-decoration none
		color _white
		display block
		text-transform uppercase
		padding 0.25em 1.5em 0em
		transition .2s
		font-weight bold
		&:hover
			background _white
			transition .1s
			color _gray
	.nav > ul
		display table
		margin 0
		& > li
			float left
			& > li
				top 100%
	.zindex
		z-index 1001